<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
<LinearLayout android:orientation="vertical"
              android:gravity="center"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">

    <ImageView android:src="@drawable/shush"
               android:layout_gravity="center"
               android:layout_marginTop="24dip"
               android:layout_marginBottom="24dip"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

    <TextView android:id="@+id/welcomeMessage"
              android:text="@string/welcomeMessage"
              android:layout_marginLeft="6dip"
              android:layout_marginRight="6dip"
              android:textSize="22dip"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"/>

    <TextView android:text="@string/settingsTitle"
              android:layout_marginTop="24dip"
              android:layout_marginBottom="4dip"
              android:layout_marginLeft="6dip"
              android:layout_marginRight="6dip"
              android:textSize="18dip"
              android:textColor="#999"
              android:textStyle="bold"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"/>

    <LinearLayout android:id="@+id/notificationsLayout"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:focusable="true"
                  android:background="#181818"
                  android:padding="4dip">
        <ImageView android:id="@+id/notificationsImage"
                   android:src="@drawable/notifications_on"
                   android:layout_marginLeft="16dip"
                   android:layout_marginRight="4dip"
                   android:layout_gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
        <TextView android:id="@+id/notificationsLabel"
                  android:gravity="center_vertical"
                  android:text="@string/notificationsOn"
                  android:textSize="22dip"
                  android:layout_gravity="center"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/colorsLayout"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="2dip"
                  android:focusable="true"
                  android:background="#181818"
                  android:padding="4dip">
        <ImageView android:id="@+id/colorsImage"
                   android:src="@drawable/colors_up"
                   android:layout_marginLeft="16dip"
                   android:layout_marginRight="4dip"
                   android:layout_gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
        <TextView android:id="@+id/colorsLabel"
                  android:gravity="center_vertical"
                  android:text="@string/pink"
                  android:textSize="22dip"
                  android:layout_gravity="center"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView android:text="@string/shareTitle"
              android:layout_marginTop="24dip"
              android:layout_marginBottom="4dip"
              android:layout_marginLeft="6dip"
              android:layout_marginRight="6dip"
              android:textSize="18dip"
              android:textColor="#999"
              android:textStyle="bold"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"/>

    <TextView android:text="@string/shareOverview"
              android:layout_marginLeft="6dip"
              android:layout_marginRight="6dip"
              android:layout_marginBottom="4dip"
              android:textSize="22dip"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"/>

    <LinearLayout android:id="@+id/shareLayout"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="16dip"
                  android:focusable="true"
                  android:background="#181818"
                  android:padding="4dip">
        <ImageView android:id="@+id/shareImage"
                   android:src="@drawable/share"
                   android:layout_marginLeft="16dip"
                   android:layout_marginRight="4dip"
                   android:layout_gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
        <TextView android:id="@+id/shareLabel"
                  android:gravity="center_vertical"
                  android:text="@string/shareButton"
                  android:textSize="22dip"
                  android:layout_gravity="center"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>