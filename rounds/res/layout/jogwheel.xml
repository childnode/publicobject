<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#000000">
  <TextView
      android:id="@+id/label"
      android:text="Jesse"
      android:gravity="right"
      android:layout_marginRight="16dp"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      style="@style/TextAppearance.Rounds.Medium"/>
  <TextView
      android:id="@+id/value"
      android:text="75"
      android:gravity="right"
      android:layout_marginRight="16dp"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      style="@style/TextAppearance.Rounds.Large"/>

  <com.publicobject.rounds.JogWheel
      android:id="@+id/jogWheel"
      android:layout_width="fill_parent"
      android:layout_height="0dp"
      android:layout_weight="1"/>

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp">
    <HorizontalScrollView
        android:id="@+id/runningScoresScroller"
        android:layout_weight="1"
        android:scrollbars="none"
        android:fillViewport="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <TableLayout
          android:id="@+id/runningScores"
          android:stretchColumns="0"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"/>
    </HorizontalScrollView>
    <TableLayout
        android:id="@+id/currentScores"
        android:layout_weight="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
  </LinearLayout>
</LinearLayout>
